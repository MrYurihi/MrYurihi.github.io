{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"title": "Project",
	"description": "A StructureCraft project",
	"type": "object",
	"properties": {
		"namespace": {
			"description": "Namespace for the project",
			"type": "string"
		},
		"author": {
			"description": "The author of the project",
			"type": "string"
		},
		"structures": {
			"description": "A list of structures to be able to generate",
			"type": "array",
			"items": {
				"$ref": "structure"
			}
		}
	},
	"required": ["namespace", "author", "structures"]
}
